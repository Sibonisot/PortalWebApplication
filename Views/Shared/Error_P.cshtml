@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}


@if (ViewBag.ErrorTittle == null)
{
<h3 class="text-danger">Error!</h3>
<h4 class="text-danger">This Username is already taken! Please choose another one.</h4>
}
else
{

    <h1 class="text-danger">@ViewBag.ErrorTitle</h1>
    <h2 class="text-danger">@ViewBag.ErrorMessage</h2>

}